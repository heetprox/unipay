{
  "name": "unipay-relayer-backend",
  "version": "1.0.0",
  "description": "Minimal backend for UPI payments with NFT tickets and token swaps",
  "main": "src/index.ts",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "rm -rf dist && tsc && ts-node -r dotenv/config src/index.ts",
    "build": "tsc",
    "prebuild": "pnpm check",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate dev",
    "test": "jest"
  },
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "@pythnetwork/hermes-client": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.0.0",
    "viem": "^2.21.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.0",
    "@types/supertest": "^2.0.12",
    "jest": "^29.7.0",
    "prisma": "^5.4.2",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "upi",
    "nft",
    "defi",
    "relayer",
    "payments"
  ],
  "author": "",
  "license": "MIT"
}